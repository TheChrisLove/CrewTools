<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/padding_extra_large">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/great_youre_almost_there"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/fontColorWhite"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type_in_your_invitation_code"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/fontColorWhite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_extra_large"
        android:layout_marginRight="@dimen/margin_extra_large"
        android:layout_marginTop="@dimen/margin_extra_large"
        android:gravity="center_horizontal"
        android:text="@string/invite_crew_administrator"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/fontColorWhite" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_extra_extra_large"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_accept_invitation_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_medium"
            android:src="@drawable/ic_left_arrow" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edittext_accept_invite_password_1"
                android:layout_width="@dimen/edittext_height"
                android:layout_height="@dimen/edittext_height"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/rounded_border_background"
                android:gravity="center"
                android:hint="_"
                android:inputType="number"
                android:maxLength="1"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/textColor" />

            <EditText
                android:id="@+id/edittext_accept_invite_password_2"
                android:layout_width="@dimen/edittext_height"
                android:layout_height="@dimen/edittext_height"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/rounded_border_background"
                android:gravity="center"
                android:hint="_"
                android:inputType="number"
                android:maxLength="1"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/textColor" />

            <EditText
                android:id="@+id/edittext_accept_invite_password_3"
                android:layout_width="@dimen/edittext_height"
                android:layout_height="@dimen/edittext_height"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/rounded_border_background"
                android:gravity="center"
                android:hint="_"
                android:inputType="number"
                android:maxLength="1"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/textColor" />

            <EditText
                android:id="@+id/edittext_accept_invite_password_4"
                android:layout_width="@dimen/edittext_height"
                android:layout_height="@dimen/edittext_height"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/rounded_border_background"
                android:gravity="center"
                android:hint="_"
                android:inputType="number"
                android:maxLength="1"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/textColor" />

            <EditText
                android:id="@+id/edittext_accept_invite_password_5"
                android:layout_width="@dimen/edittext_height"
                android:layout_height="@dimen/edittext_height"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/rounded_border_background"
                android:gravity="center"
                android:hint="_"
                android:inputType="number"
                android:maxLength="1"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/textColor" />

            <EditText
                android:id="@+id/edittext_accept_invite_password_6"
                android:layout_width="@dimen/edittext_height"
                android:layout_height="@dimen/edittext_height"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/rounded_border_background"
                android:gravity="center"
                android:hint="_"
                android:inputType="number"
                android:maxLength="1"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/textColor" />

        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/button_accept_invitation_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_extra_extra_large"
        android:background="@drawable/rounded_border_background"
        android:padding="@dimen/padding_large"
        android:text="Continue"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/buttonFontColor"
        android:textStyle="bold" />

</LinearLayout>