<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar xmlns:local="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_my_account_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <ImageView
                android:id="@+id/imageview_my_account_menu_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_close"
                android:tint="@color/fontColorWhite" />

            <TextView
                android:id="@+id/textview_toolbar_my_account_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_medium"
                android:text="Edit" 
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/fontColorWhite" />

            <TextView
                android:id="@+id/textView_my_account_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="MY ACCOUNT"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/fontColorBlack"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:id="@+id/myaccount_container"
        android:layout_below="@+id/toolbar_my_account_top"
        android:layout_above="@+id/toolbar_my_account_bottom" />


    <android.support.v7.widget.Toolbar xmlns:local="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_my_account_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/toolbar_background"
        android:gravity="center_horizontal"
        android:minHeight="?attr/actionBarSize"
        local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/linealayout_my_account_menu_jobs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageview_my_account_menu_jobs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_jobs" />

                <TextView
                    android:id="@+id/textview_my_account_menu_jobs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Jobs"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/fontColorWhite" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linealayout_my_account_menu_calender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageview_my_account_menu_calender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calender" />

                <TextView
                    android:id="@+id/textview_my_account_menu_calender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Calender"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/fontColorWhite" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linealayout_my_account_menu_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageview_my_account_menu_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_crew" />

                <TextView
                    android:id="@+id/textview_my_account_menu_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Account"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/fontColorWhite" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

</RelativeLayout>