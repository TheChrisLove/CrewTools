<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/edittextBackgroundWhite">

        <ImageView
            android:id="@+id/imageview_job_type_picker_add_remove"
            android:layout_width="@dimen/close_icon_height_width"
            android:layout_height="@dimen/close_icon_height_width"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_medium"
            android:src="@drawable/ic_remove"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textview_job_type_picker_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/relativelayout_job_type_picker_selected_edit_layout"
            android:layout_toRightOf="@+id/imageview_job_type_picker_add_remove"
            android:padding="@dimen/padding_medium"
            android:singleLine="true"
            android:text="Landscaping"
            android:textAppearance="?android:textAppearanceSmall" />

        <RelativeLayout
            android:id="@+id/relativelayout_job_type_picker_selected_edit_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_medium">

            <ImageView
                android:id="@+id/imageview_row_job_type_picker_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tick"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imageview_row_job_type_picker_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                android:visibility="invisible" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_width"
        android:layout_marginLeft="@dimen/margin_medium"
        android:background="@color/light_grey_background" />
</LinearLayout>