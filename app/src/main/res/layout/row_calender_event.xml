<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_extra_small">

        <TextView
            android:id="@+id/textview_row_calender_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Main"
            android:layout_toLeftOf="@+id/textview_row_calender_event_time"
            android:textColor="@color/fontColorBlack"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_row_calender_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Main"
            android:layout_below="@+id/textview_row_calender_heading"
            android:layout_toLeftOf="@+id/textview_row_calender_event_time"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/fontColorGray" />

        <TextView
            android:id="@+id/textview_row_calender_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            tools:text="Main"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_medium"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/buttonFontColor" />

    </RelativeLayout>
</LinearLayout>