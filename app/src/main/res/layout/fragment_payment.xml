<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearlayout_payment_pay_terms_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

        <RelativeLayout
            android:id="@+id/relativelayout_payments_add_new_term_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/edittextBackgroundWhite"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageview_payments_add_new_item"
                android:layout_width="@dimen/close_icon_height_width"
                android:layout_height="@dimen/close_icon_height_width"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_medium"
                android:src="@drawable/ic_circle_plus" />

            <TextView
                android:id="@+id/textview_payments_add_new_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageview_payments_add_new_item"
                android:maxLines="2"
                android:padding="@dimen/padding_medium"
                android:text="Add New Item"
                android:textAppearance="?android:textAppearanceSmall" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>