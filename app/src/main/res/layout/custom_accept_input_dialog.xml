<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_custom_dialog_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_medium"
            android:text="Title"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/textview_custom_dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_medium"
            android:text="Message"
            android:textAppearance="?android:textAppearanceSmall" />

        <EditText
            android:id="@+id/edittext_custom_dialog_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:background="@drawable/rounded_solid_border_background"
            android:padding="@dimen/padding_medium"
            android:textAppearance="?android:textAppearanceSmall" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_custom_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/rounded_border_background"
                android:padding="@dimen/padding_large"
                android:text="CANCEL"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/buttonFontColor"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_custom_dialog_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/rounded_border_background"
                android:padding="@dimen/padding_large"
                android:text="ADD"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/buttonFontColor"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>